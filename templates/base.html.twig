<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        	<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}">
        {% endblock %}
    </head>
    <body>
    	{% block header %}
    	<div id="header">
    		<h1>Taeras Symfony</h1> 
    		<ul>
                {% if app.user %}
                <li><a href="{{ path('tasks') }}">Inicio</a></li>
    			<li><a href="{{ path('my_tasks') }}">Mis tareas</a></li>
                <li><a href="{{ path('creation') }}">Crear tarea</a></li>
                <li><a href="">{{ app.user.name }}</a></li>
                <li><a href="{{ path('logout') }}">Cerrar sesión</a></li>
                {% else %}
    			<li><a href="{{ path('login') }}">Iniciar sesión</a></li>
    			<li><a href="{{ path('register') }}">Registrarse</a></li>
                {% endif %}
    		</ul>
    	</div>
    	{% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
